{
  "name": "My first beautiful extension",
  "version": "1.0",
  "description": "First project to build a fresh Chrome extension",
  "manifest_version": 2,
  "permissions": ["activeTab", "declarativeContent"],
  "icons": {
  },
  "page_action": {
  },
  "background": {
    "scripts": ["script.js","thirdParty/jquery-2.0.3.js", "background.js"] },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["thirdParty/jquery.1.10.2.min.js", "script.js"],
      "css": ["css/style.css"],
      "run_at": "document_end"
    }
  ]
}